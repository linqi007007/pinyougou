<veiw class="detail_swiper">
    <swiper 
    autoplay 
    circular
    indicator-dots
    >
        <swiper-item 
        wx:for="{{goodsObj.pics}}"
        wx:key="pics_id"
        >
           <image class="" src="{{item.pics_mid}}" mode="widthFix"/>
              
        </swiper-item>
          
    </swiper>
      
</veiw>
<veiw class="goods_price">
¥{{goodsObj.goods_price}}
</veiw>
<veiw class="goods_name_row">
    <view class="goods_name">{{goodsObj.goods_name}}</view>
    <view class="goods_collect">
        <text class="iconfont icon-shoucang"></text>
        <view class="collect_text">收藏</view>
    </view>
</veiw>
<view class="goods_info">
    <view class="goods_info_title">
        图文详情
    </view>
    <view class="goods_info_content">
        <!-- 富文本 -->
        <rich-text  nodes="{{goodsObj.goods_introduce}}"/>
           
          
        
    </view>
</view>